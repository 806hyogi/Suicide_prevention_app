<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFF4F7" />
    <corners android:topLeftRadius="16dp"
        android:topRightRadius="16dp"
        android:bottomLeftRadius="16dp" /> <!-- 우측 하단 빼고 둥글게 -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"

        android:bottom="8dp" /> <!-- 말풍선 내부 패딩 설정 -->

    <stroke
        android:width="1dp"
        android:color="#000000"
        android:dashWidth="8dp"
        android:dashGap="8dp"
        android:shape="rectangle" /> <!-- 점선 테두리 설정 -->
</shape>
